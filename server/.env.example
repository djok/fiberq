# =============================================================================
# FiberQ Server - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values before deploying.
#
# In Portainer: Stack → Environment Variables → paste these values.
# =============================================================================

# --- PostgreSQL / PostGIS ---------------------------------------------------
POSTGRES_DB=fiberq
POSTGRES_USER=fiberq
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# --- Zitadel OIDC -----------------------------------------------------------
# Get these from your Zitadel Console (https://zitadel.cloud)
# Organization → Project "FiberQ" → Application → API type
ZITADEL_DOMAIN=your-org.zitadel.cloud
ZITADEL_CLIENT_ID=your-client-id-from-zitadel
ZITADEL_PROJECT_ID=your-project-id-from-zitadel

# --- API Server --------------------------------------------------------------
API_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
LOG_LEVEL=info

# --- FiberQ API Image --------------------------------------------------------
FIBERQ_API_VERSION=latest

# --- Ports (change if conflicts) ---------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# --- pgAdmin (optional, only with --profile admin) ---------------------------
PGADMIN_EMAIL=admin@fiberq.local
PGADMIN_PASSWORD=CHANGE_ME_pgadmin_password

# --- Server Domain (for SSL/Nginx) ------------------------------------------
SERVER_DOMAIN=fiberq.your-company.com
